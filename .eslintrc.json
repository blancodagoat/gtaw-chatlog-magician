{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "args": "after-used", "ignoreRestSiblings": true }],
    "no-undef": "error",
    "import/no-unresolved": "off"
  },
  "overrides": [
    {
      "files": ["api/**/*.js"],
      "env": { "node": true, "browser": false }
    },
    {
      "files": ["tests/**/*.js"],
      "env": { "node": true, "browser": false }
    }
  ]
}

